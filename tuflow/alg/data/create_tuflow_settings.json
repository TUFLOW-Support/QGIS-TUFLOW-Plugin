{
  "name": "create TUFLOW control files settings",
  "description": "Settings for creating TUFLOW control files",
  "command settings":
  {
    "General Settings":
    {
      "Solution Scheme":
      {
        "type":  "combobox",
        "options":  ["Classic", "HPC"],
        "default": "HPC",
        "comment":  "Sets the solution scheme to use."
      },
      "Hardware":
      {
        "type":  "combobox",
        "options":  ["CPU", "GPU"],
        "default": "GPU",
        "comment":  "Sets the hardware to use. GPU requires an NVIDIA GPU card.",
        "validation": "Solution Scheme == HPC"
      },
      "SGS":
      {
        "type":  "combobox",
        "options":  ["ON", "OFF"],
        "default": "ON",
        "comment":  "Sets whether to use Sub-Grid Sampling (SGS).",
        "validation": "Solution Scheme == HPC"
      },
      "Cell Size":
      {
        "type": "doublespinbox",
        "min": 0.01,
        "max": 99999,
        "step": 1,
        "decimals": 2,
        "default": 1,
        "comment": "Base cell size."
      }
    },
    "GIS Settings":
    {
      "Projection":
      {
        "type": "crswidget",
        "comment": "Sets the model's GIS projection."
      },
      "GIS Format":
      {
        "type":  "combobox",
        "options":  ["GPKG", "SHP", "MIF"],
        "default": "GPKG",
        "comment":  "Sets the output GIS format."
      },
      "GRID Format":
      {
        "type":  "combobox",
        "options":  ["TIF", "ASC", "FLT", "NC"],
        "default": "TIF",
        "comment":  "Sets the output GRID format."
      }
    },
    "Time Settings":
    {
      "Start Time":
      {
        "type":  "doublespinbox",
        "min": -1000.0,
        "max": 1000.0,
        "step": 0.5,
        "default": 0.0,
        "decimals":  1,
        "comment":  "hrs"
      },
      "End Time":
      {
        "type":  "doublespinbox",
        "min": -1000.0,
        "max": 1000.0,
        "step": 0.5,
        "default": 1.0,
        "decimals":  1,
        "comment":  "hrs"
      },
      "Timestep":
      {
        "type":  "doublespinbox",
        "min": 0.1,
        "max": 1000.0,
        "step": 0.5,
        "default": 1.0,
        "decimals": 1,
        "comment":  "secs (sets timestep initial for HPC)"
      },
      "Timestep Maximum":
      {
        "type": "None",
        "validation": "Solution Scheme == HPC"
      },
      "Timestep Initial":
      {
        "type": "None",
        "validation": "Solution Scheme == HPC"
      },
      "SGS Map Extent Trim":
      {
        "type": "None",
        "validation": ["Solution Scheme == HPC", "SGS == ON"]
      },
      "SGS Depth Output":
      {
        "type": "None",
        "validation": ["Solution Scheme == HPC", "SGS == ON"]
      }
    }
  },
  "section settings":
  {
    "! SGS SETTINGS": {
      "validation": ["Solution Scheme == HPC", "SGS == ON"]
    }
  }
}